{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "target": "es6",
      "outDir": "dist",
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipDefaultLibCheck": true,
      "skipLibCheck": true,
      "lib": [
          "es2017"
      ],
      "typeRoots": [
          "node_modules/@types"
      ],
      "types": [
          "node",
          "express"
      ],
      "esModuleInterop": true
  },
  "include": [
      "src/**/*",
      "hosts"
    , "App.ts"  ,
    "assets/*"
, "hosts/api/app.local.ts", "hosts/api/App.ts", "hosts/api/AppBuilder.ts", "hosts/api/ContainerFactory.ts"  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts",
      ".vscode"
  ]
}